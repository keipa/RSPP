<div class="container media">
    <div id="upload" image-url="<%= gallery_pictures_path(@gallery) %>">
        <p class="big-text">
            Загрузить
        </p>
    </div>
    <div id="back-to-galleries">
        <a href="<%=galleries_path%>">
            <p class="big-text">Назад</p>
        </a>
    </div>
    <div class="row">
        <% @gallery.pictures.all.each do |picture| %>
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <%= image_tag picture.image_url, class: "img-responsive"%>
                <div class="caption">
                    <h3><%= picture.name %></h3>
                    <p>
                        <a href="#" class="btn btn-primary" role="button">Редактировать</a>
                        <a href="<%=gallery_picture_path(@gallery,picture)%>" data-method="delete" class="btn btn-danger" role="button">Удалить</a>
                    </p>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>
