<div class="container-fluid gallery-page">
    <div class="container">
        <div class="new-gallery">
            <div class="gallery-page-header">
                <h1>Добавить видео</h1>
            </div>
            <div class="col-md-8 col-md-offset-2">
                <%= form_for(:video, url: gallery_album_videos_path(@gallery,@album), method: :post) do |f| %>
                <div class="container form-content">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="name-field">
                            <h2>
                                Ссылку на видео с YouTube:
                            </h2>
                            <input id="video-field" class="form-control" data-redirect="<%=gallery_album_path(@gallery,@album)%>" data-url="<%=gallery_album_videos_path(@gallery,@album)%>" type="text" name="video[link]" placeholder="https://www.youtube.com/watch?v=abcdefghjkl">
                        </div>
                        <div class="choose-field">
                            <h2>
                                Выберите тип видео:
                            </h2>
                            <div class="radio">
                                <label for="video_type_video_meeting"><%= f.radio_button :type_video, 'meeting'%>Мероприятие</label>
                            </div>
                            <div class="radio">
                                <label for="video_type_video_interview"><%= f.radio_button :type_video, 'interview', :checked => true %>Интервью</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="btn-group col-md-4 col-md-offset-4">
                    <button type="submit" id="video-add-button" class="btn btn-success">Добавить</button>
                    <%= link_to 'Назад',gallery_album_path(@gallery,@album), class: "btn btn-info" %>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
