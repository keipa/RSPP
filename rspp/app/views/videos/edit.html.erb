<div class="container-fluid gallery-page">
    <div class="container">
        <div class="new-gallery">
            <div class="gallery-page-header">
                <h1>Редактирование видео</h1>
            </div>
            <div class="col-md-6 col-md-offset-3">
                <%= form_for(:video, url: gallery_album_video_path(@gallery,@album), method: :patch) do |f| %>
                <div class="container form-content">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="name-field">
                            <h2>
                                Заголовок видео:
                            </h2>
                            <%= f.text_field :title, autocomplete: "off", placeholder: "Заголовок видео..." %>
                        </div>
                        <div class="name-field">
                            <h2>
                                Описание видео:
                            </h2>
                            <%= f.text_field :description, autocomplete: "off", placeholder: "Описание видео..." %>
                        </div>
                        <div class="choose-field">
                            <h2>
                                Выберите тип видео:
                            </h2>
                            <div class="radio">
                                <label><%= f.radio_button :type_video, 'inerview', :checked => true %>Интервью</label>
                            </div>
                            <div class="radio">
                                <label><%= f.radio_button :type_video, 'meeting'%>Мероприятие</label>
                            </div>
                        </div>
                    </div>
                    <div class="btn-group col-md-4 col-md-offset-4">
                        <button type="submit" class="btn btn-success">Сохаранить</button>
                        <%= link_to 'Назад',gallery_album_path(@gallery,@album), class: "btn btn-info" %>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
