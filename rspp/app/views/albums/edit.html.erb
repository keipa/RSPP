<div class="container ">
    <div class="new-album">
        <h1>Редактирование альбом</h1>
        <%= form_for(:album, url: gallery_album_path(@gallery), method: :patch) do |f| %>
        <p><%= f.text_field :name, autocomplete: "off", placeholder: "Имя альбома" %></p>
        <p><%= f.text_area :description, autocomplete: "off", placeholder: "Описание" %></p>
        <div class="btn-group">
            <button type="submit" class="btn btn-success">Создать</button>
            <%= link_to 'Назад',gallery_path(@gallery), class: "btn btn-info" %>
        </div>
        <% end %>
    </div>
</div>
