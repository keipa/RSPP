<div class="add-topic-form">
  <%= form_for(:topic, url: topics_path(:topic)) do |f| %>
    <div class="add-topic-form-header">
      <h1> Добавить раздел </h1>
      
      <%= f.text_field :text, autocomplete: "off", placeholder: "Название" %>
      <%= f.submit "Добавить" %>


    </div>
    <div class="add-topic-form-footer">
      <h2> Добавить подразделы </h2>
      <p>
        Количество:
        <select id="numOfSubtopics">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8">8</option>
        </select>
      </p>

      <div class="subtopicsInfo">
        
      </div>
    </div>
  <% end %>
</div>