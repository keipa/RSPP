<div class="add-topic-form">
  <%= form_for(:topic, url: topics_path(:topic)) do |f| %>
    <div class="add-topic-form-header">
      <h1> Добавить раздел </h1>

      <%= f.text_field :text, autocomplete: "off", placeholder: "Название", id: "text_topic"  %>
      <%= f.text_field :link, autocomplete: "off", placeholder: "Ссылка на материал", id: "link_topic" %>
      <%= f.submit "Добавить", id: "add_topic_button", data_controller: topics_path %>

      <div class="close">
        <span class="glyphicon glyphicon-remove"></span>
      </div>
    </div>
    <div class="add-topic-form-footer">
      <h2> Добавить подразделы </h2>
      <p>
        Количество:
        <select class="numOfSubtopics">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8">8</option>
        </select>
      </p>

      <div class="subtopicsInfo">

      </div>
    </div>
  <% end %>
</div>
