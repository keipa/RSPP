<div class="business-news">
    <h2>
        Деловые новости
    </h2>
    <hr>
    <div class="business-news-container">
        <% @business_news.each do |post| %>
            <div class="business-news-post">
                <% if post.image_url.present? %>
                    <div class="image text-center">
                        <img class="image" src="<%=post.image_url%>">
                    </div>
                    <div class="text">
                        <h4>
                            <%= link_to post.title, news_post_path(post) %>
                        </h4>
                        <p>
                            <%= post.description %>
                            <p><small class="date-block"><%= l post.created_at, format: :short %></small></p>
                        </p>
                    </div>
                <% else %>
                    <div class="full-text">
                        <h4>
                            <%= link_to post.title, news_post_path(post) %>
                        </h4>
                    </div>
                    <p>
                        <%= post.description %>
                        <p><small class="block"><%= l post.created_at, format: :short %></small></p>
                    </p>
                <% end %>
            </div>
            <hr>
        <% end %>
    </div>
</div>