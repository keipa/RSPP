<%= form_for [:admin, @slide] do |f| %>
  <div class="add-slide-form-body">
    Добавить изображение:
    <%= f.file_field :image, id: "upload-slide-picture" %>

    <div class="slide-text">
      Добавить текст:
      <%= f.text_field :text, class: "form-input" %>
    </div>
  </div>
  <div class="actions text-center">
    <%= f.submit 'Добавить', class: 'create-btn' %>
  </div>
<% end %>
