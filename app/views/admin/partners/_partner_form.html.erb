<div class="partner-form modal-window">
    <div class="partner-form-header">
      <div class="close">
        <span class="glyphicon glyphicon-remove"></span>
      </div>
      Добавить партнера
    </div>

    <%= form_for [:admin, @partner] do |f| %>
      <div class="partner-form-body">
        <div class="form-group">
          <label for="partner-link">Ссылка на сайт партнера:</label>
          <%= f.text_field :link, class: "form-input",
            placeholder: "http://www.sample.ru", id: "partner-link" %>
        </div>
        <div class="text-center">
          <div id="loadedImage">
            <img src="<%= @partner.image.url if @partner.image.present? %>">
          </div>
        </div>
        Добавить изображение:
        <%= f.file_field :image, id: "partner-image-input" %>

        Стратегический партнер?
        <%= f.check_box :main %>

        <br>

        <div class="textarea-label">
          Описание
        </div>
        <div class="textarea-content">
          <%= f.text_area :description, class: "form-input" %>
        </div>
      </div>

      <div class="actions text-center">
        <%= f.submit "Добавить", class: "create-btn" %>
      </div>
    <% end %>
</div>
