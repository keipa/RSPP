<%= form_for [:admin, @survey], html: { id: "survey-form" } do |f| %>
  <div class="container">
    <div class="col-lg-8 col-lg-offset-2">

      <h2>Вопрос опроса:</h2>
      <%= f.text_field :title, class: "form-input" %>

      <div class="survey-content">
        <% JSON.parse(@survey.content).each do |option| %>
          <div class="options-content">
            <input type="text" value="<%= option['body'] %>" class="input-option">
            <span class="glyphicon glyphicon-remove remove-option"></span>
          </div>
        <% end %>
      </div>

      <h4>Добавить варианты ответов:</h4>
      <div class="survey-content">
        <div class="survey-content-add-field" title="Добавить вариант ответа">
          <i class="glyphicon glyphicon-plus"></i>
        </div>
      </div>

      <h2 style="">Активный опрос?</h2>
      <%= f.check_box :active, checked: "checked" %>

      <div class="actions text-center">
        <%= f.submit "Создать", class: "create-btn" %>
        <%= link_to "Назад", admin_surveys_path, class: "back-btn" %>
      </div>
    </div>
  </div>
<% end %>
