<%= render 'survey_add' %>
<%= render 'survey_edit' %>

<div class="add-survey-btn-wrapper text-center" style="padding: 10px 0; background: #FFFFFF;">
    <%= link_to "Добавить опрос", new_admin_survey_path,
        class: "btn btn-default add-survey", style: "font-size: 20px;" %>
</div>

<table class="table table-striped text-center" style="font-size: 20px;">
    <tr>
        <td style="width: 5%;">
            <b>
                ID
            </b>
        </td>
        <td style="width: 47%;">
            <b>
                Тема опроса
            </b>
        </td>
        <td style="width: 5%:">
            <b>
                Проголосовали
            </b>
        </td>
        <td style="width: 15%;">
            <b>
                Состояние
            </b>
        </td>
        <td style="width: 15%;">
            <b>
                Время публикации
            </b>
        </td>
        <td style="width: 13%;">
        </td>
    </tr>

    <% @surveys.each do |survey| %>
        <tr>
            <td>
                <%= survey.id %>
            </td>

            <td>
                <% if survey.question.chars[30] %>
                    <%= survey.question.chars.first(30).join + "..." %>
                <% else %>
                    <%= survey.question %>
                <% end %>
            </td>

            <td>
                <%= survey.users_voted %> чел.
            </td>

            <td>
                <% if survey.active %>
                    Активен
                <% else %>
                    Закрыт
                <% end %>
            </td>

            <td>
                <%= l survey.created_at, format: :long %>
            </td>

            <td class="text-right">
                <%= link_to "Редактировать", edit_admin_survey_path(survey) %>
                <%= link_to admin_survey_path(survey), method: :delete do %>
                    <button class="btn btn-danger">
                        Удалить
                    </button>
                <% end %>
            </td>
        </tr>
    <% end %>
</table>
