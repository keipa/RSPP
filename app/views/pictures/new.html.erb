<div class="container">
  <%= render 'galleries/galleries_nav', type: @gallery.gallery_type %>
  <div class="new-picture">
    <div class="new-picture-header">
      <h1>Добавить фотографии</h1>
    </div>
    <%= form_for @picture,
      url: gallery_album_pictures_path(@gallery.smart_id, @album.id) do |f| %>
      <div class="col-md-8 col-md-offset-2">
        <%= @errors if @errors %>
        <div class="description-field">
          <h2>
            Выбрать фотографии:
          </h2>
          <%= f.file_field :images, multiple: true, required: true %>
        </div>
      </div>
      <div class="actions col-lg-4 col-lg-offset-4 text-center">
        <%= f.submit "Добавить", class: "create-btn" %>
        <%= link_to 'Назад', gallery_album_path(@gallery.smart_id, @album.id), class: "back-btn" %>
      </div>
    <% end %>
  </div>
</div>
