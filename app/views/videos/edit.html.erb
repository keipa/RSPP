<div class="container-fluid gallery-page">
	<div class="new-gallery">
		<div class="gallery-page-header">
			<h1>Редактирование видео</h1>
		</div>
		<%= form_for(:video, url: "#{@gallery.link}/albums/#{@album.id}/videos/#{@video.id}", method: :patch) do |f| %>
		<div class="container form-content">
			<div class="col-md-8 col-md-offset-2">
				<div class="name-field">
					<h2>
						Заголовок видео:
					</h2>
					<%= f.text_field :title, autocomplete: "off", placeholder: "Заголовок видео...", value: @video.title %>
				</div>
				<div class="name-field">
					<h2>
						Описание видео:
					</h2>
					<%= f.text_field :description, autocomplete: "off", placeholder: "Описание видео...", value: @video.description %>
				</div>
				<div class="choose-field">
					<h2>
						Выберите тип видео:
					</h2>
					<div class="radio">
						<label><%= f.radio_button :type_video, 'interview', :checked => true %>Интервью</label>
					</div>
					<div class="radio">
						<label><%= f.radio_button :type_video, 'meeting'%>Мероприятие</label>
					</div>
				</div>
			</div>
			<div class="btn-group col-md-4 col-md-offset-4">
				<button type="submit" class="btn btn-success">Сохаранить</button>
				<%= link_to 'Назад',:back, class: "btn btn-info" %>
			</div>
		</div>
		<% end %>
	</div>
</div>
