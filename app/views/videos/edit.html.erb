<div class="container">
	<%= render 'galleries/galleries_nav', type: @gallery.gallery_type %>
	<div class="edit-video">
		<div class="edit-video-header">
			<h1>Редактировать видео</h1>
		</div>
		<%= form_for @video,
			url: gallery_album_video_path(@gallery.smart_id, @album.id, @video) do |f| %>
			<div class="col-md-8 col-md-offset-2">
				<div class="name-field">
					<h2>
						Вставьте ссылку на видео с YouTube:
					</h2>
					<%= f.text_field :youtube_link,
						placeholder: "https://www.youtube.com/watch?v=abcdefghjkl",
						class: "form-input" %>
				</div>
				<div class="description-field">
					<h2>
						Описание к видео:
					</h2>
					<%= f.text_area :description,
						autocomplete: "off",
						placeholder: "Описание видео...",
						class: "form-input" %>
				</div>
				<div class="options-list">
					<div class="option">
						<%= f.radio_button :video_type, "meeting", id: "meeting" %>
						<label for="meeting">Мероприятие</label>
						<!-- For checkbox styling -->
						<div class="check"><div class="inside"></div></div>
					</div>
					<div class="option">
						<%= f.radio_button :video_type, "interview", id: "interview" %>
						<label for="interview">Интервью</label>
						<!-- For checkbox styling -->
						<div class="check"><div class="inside"></div></div>
					</div>
				</div>
			</div>
			<div class="actions col-lg-4 col-lg-offset-4 text-center">
				<%= f.submit "Сохранить", class: "create-btn" %>
				<%= link_to 'Назад', gallery_album_path(@gallery.smart_id, @album.id), class: "back-btn" %>
			</div>
		<% end %>
	</div>
</div>
