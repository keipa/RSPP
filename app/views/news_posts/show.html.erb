<div class="container news-post-container">
  <h1><%= @post.title %></h1>

    <hr>

    <% if @post.description.present? %>
    <h3>
        <b>
            <%= @post.description %>
        </b>
    </h3>

    <hr>
    <% end %>

    <div class="ckeditor-content">
      <%= @post.text.html_safe %>
    </div>

     <p style="font-size: 16px;">
          Опубликовал:
          <%= @post.user.first_name %>
          <%= @post.user.last_name %>
      </p>
</div>

