<div class="container-fluid gallery-page">
	<div class="new-gallery">
		<div class="gallery-page-header">
			<h1>Новый альбом</h1>
		</div>
		<form action="<%= @gallery.link%>/albums" method="post">
			<div class="container form-content">
				<div class="col-md-8 col-md-offset-2">
					<div class="name-field ">
						<h2>
							Введите имя альбома:
						</h2>
						<input autocomplete="on" placeholder="Имя" name="album[name]" id="album_name"></input>
					</div>
					<div class="description-field">
						<h2>
							Добавьте описание:
						</h2>
						<textarea autocomplete="off" placeholder="Описание" name="album[description]" id="album_description"></textarea>
					</div>
				</div>
				<div class="btn-group col-md-4 col-md-offset-4">
					<button type="submit" class="btn btn-success">Создать</button>
					<%= link_to 'Назад',@gallery.link, class: "btn btn-info" %>
				</div>
			</div>
		</form>
	</div>
</div>
