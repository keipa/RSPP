<div class="burger-menu-icon"></div>

<div class="burger-menu">
  <div class="burger-menu-logo-container">
    <%= link_to root_path, "data-turbolinks": false do %>
      <%= image_tag ('logo.png') %>
    <% end %>
  </div>
  <div class="burger-menu-join-us-btn-container">
    <%= link_to join_rspp_path do %>
      Вступить в союз
    <% end %>
  </div>
  <div class="burger-menu-topics-container">
    <div class="topic-container-for-overflow">
      <% @topics.each do |topic| %>
        <%= link_to topic_path(topic.smart_id) do %>
          <div class="burger-menu-topic">
            <%= topic.text %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="burger-menu-footer">
    <% if user_signed_in? %>
      <div class="burger-menu-logout-btn">
        <%= link_to "Выйти", destroy_user_session_path, method: :delete %>
      </div>
      <% if current_user.admin? %>
        <%= link_to "Кабинет", admin_path(:rspp) %>
      <% end %>
    <% else %>
      <div class="burger-menu-sign-in-btn">
        <%= link_to "Войти", new_user_session_path %>
        </div>
      <div class="burger-menu-sign-up-btn">
        <%= link_to "Регистрация", new_user_registration_path %>
      </div>
    <% end %>
  </div>
  <div class="burger-list-item burger-list-item--active">
    <%= link_to "Вступить в союз", join_rspp_path  %>
  </div>

</div>
