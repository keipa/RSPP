<div class="burger-menu"></div>

<div class="burger-list">
	<div class="burger-list-item burger-list-item--active">
		<%= link_to "Вступить в союз", join_rspp_path  %>
	</div>
	<% if user_signed_in? && current_user.admin? %>
		<div class="burger-list-item">
			<%= link_to "Кабинет", admin_path(:rspp) %>
		</div>
	<% end %>

	<% @topics.each do |topic| %>
		<div class="burger-list-item">
			<%= link_to topic.text, topic_path(topic.smart_id)%>
		</div>
	<% end %>

	<div class="burger-list-item"><%= link_to "Галерея", gallery_path(:photo) %></div>
	<div class="burger-list-item no-hover"></div>

	<% if user_signed_in? %>
		<div class="burger-list-item burger-list-item--active">
				<%= link_to "Выйти", destroy_user_session_path, method: :delete %>
		</div>
	<% else %>
		<div class="burger-list-auth">
			<div class="burger-list-auth-item">
				<%= link_to "Войти", new_user_session_path %>
				</div>
			<div class="burger-list-auth-item">
				<%= link_to "Регистрация", new_user_registration_path %>
			</div>
		</div>
	<% end %>
</div>
