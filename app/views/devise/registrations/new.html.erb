<div class="container">
  <div class="col-lg-6 col-lg-offset-3 sign-up-container">
    <h2>Зарегистрироваться</h2>
    <hr>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <h2>Имя</h2>
        <%= f.text_field :first_name, autofocus: true, class: "form-input col-lg-12" %>
      </div>

      <div class="field">
        <h2>Фамилия</h2>
        <%= f.text_field :last_name, class: "form-input col-lg-12" %>
      </div>

      <div class="field">
        <h2>Email</h2>
        <%= f.email_field :email, autocomplete: "off", class: "form-input col-lg-12" %>
      </div>

      <div class="field">
        <h2>Пароль</h2>
        <% if @minimum_password_length %>
          <em>(Минимум <%= @minimum_password_length %> символов)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-input col-lg-12" %>
      </div>

      <div class="field">
        <h2>Подтверждение пароля</h2>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-input col-lg-12" %>
      </div>

      <div class="actions">
        <input type="submit" value="Зарегистрироваться">
      </div>

    <% end %>
  </div>
</div>
