<div class="container-fluid gallery-page">
	<div class="new-gallery">
		<div class="gallery-page-header">
			<h1>Редактирование галереи</h1>
		</div>
		<%= form_for(:gallery, url: gallery_path, method: :patch) do |f| %>
		<div class="container form-content">
			<div class="name-field col-md-8 col-md-offset-2">
				<h2>
					Введите имя галереи:
				</h2>
				<%= f.text_field :name, autocomplete: "off", placeholder: "Имя галереи..." %>
			</div>
			<div class="choose-field  col-md-8 col-md-offset-2">
				<h2>
					Выберите тип галереи:
				</h2>
				<div class="radio">
					<label><%= f.radio_button :type_gallery, 'photo', :checked => true %>Фотогалерея</label>
				</div>
				<div class="radio">
					<label><%= f.radio_button :type_gallery, 'video'%>Видеогалерея</label>
				</div>

			</div>
			<div class="btn-group col-md-4 col-md-offset-4">
				<button type="submit" class="btn btn-success">Сохаранить</button>
				<%= link_to 'Назад',galleries_path, class: "btn btn-info" %>
			</div>
		</div>
		<% end %>
	</div>
</div>
