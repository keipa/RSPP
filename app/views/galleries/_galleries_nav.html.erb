<div class="gallery-navigation">

	<div>
		<% @galleries.each do |gallery| %>
			<% active_or_not = 'active' if type == gallery.gallery_type %>
			<div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 gallery-navigation-item">
				<%= link_to type_galleries_path(gallery.gallery_type),
					class: "col-lg-12 #{active_or_not}" do %>
					<%= gallery.name %>
				<% end %>
			</div>
		<% end %>
	</div>
</div>
